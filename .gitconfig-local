[alias]
    # –ü–æ–∏—Å–∫ –∫–æ–º–º–∏—Ç–æ–≤
    find-commit = "!f() { git log --oneline --all --graph | grep -i \"$1\"; }; f"
    find-by-hash = "!f() { git log --oneline --all | grep \"$1\"; }; f"
    find-by-message = "!f() { git log --oneline --all --grep=\"$1\"; }; f"
    
    # –°–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏—è
    sync = "!git fetch origin && git status"
    sync-all = "!git fetch --all && git status"
    
    # –ò—Å—Ç–æ—Ä–∏—è
    hist = "log --oneline --all --graph --decorate"
    hist-detailed = "log --oneline --all --graph --decorate --stat"
    
    # –í–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ
    restore-commit = "!f() { git checkout \"$1\" && git switch -c \"restored-from-$1\"; }; f"
    
    # –°—Ç–∞—Ç—É—Å –ø—Ä–æ–µ–∫—Ç–∞
    project-status = "!echo 'üìä –°—Ç–∞—Ç—É—Å –ø—Ä–æ–µ–∫—Ç–∞:' && git status && echo 'üåê –í–µ—Ç–∫–∏:' && git branch -a && echo 'üìà –ü–æ—Å–ª–µ–¥–Ω–∏–µ –∫–æ–º–º–∏—Ç—ã:' && git log --oneline -5"
