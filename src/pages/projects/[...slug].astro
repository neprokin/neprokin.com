---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Badge from '../../components/ui/Badge.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: project,
  }));
}

type Props = CollectionEntry<'projects'>;

const project = Astro.props;
const { Content } = await project.render();

// Получаем другие проекты для навигации
const allProjects = await getCollection('projects');
const otherProjects = allProjects
  .filter(p => p.slug !== project.slug)
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 2);
---

<Layout 
  title={`${project.data.title} - ${project.data.company}`}
  description={project.data.description}
>
  <main class="container">
    <!-- Project Header -->
    <header style="padding: 64px 0 48px; max-width: 1000px; margin: 0 auto;">
      <div style="margin-bottom: 24px;">
        <span class="body text-secondary">{project.data.company}</span>
        {project.data.status === 'current' && (
          <Badge class="ml-2">Current</Badge>
        )}
      </div>
      
      <h1 class="h1 text-accent" style="margin-bottom: 16px;">{project.data.title}</h1>
      <p class="body-large text-secondary" style="margin-bottom: 32px;">{project.data.description}</p>
      
      <div style="display: flex; flex-wrap: wrap; gap: 24px; margin-bottom: 32px;">
        <div>
          <span class="body text-secondary">Role: </span>
          <span class="body text-primary">{project.data.role}</span>
        </div>
        <div>
          <span class="body text-secondary">Duration: </span>
          <span class="body text-primary">{project.data.duration}</span>
        </div>
      </div>
      
      {project.data.technologies && (
        <div style="margin-bottom: 32px;">
          <p class="body text-secondary" style="margin-bottom: 12px;">Technologies:</p>
          <div style="display: flex; gap: 8px; flex-wrap: wrap;">
            {project.data.technologies.map((tech) => (
              <Badge>{tech}</Badge>
            ))}
          </div>
        </div>
      )}
      
      {project.data.externalUrl && (
        <div>
          <Button href={project.data.externalUrl} variant="primary">View Live Project</Button>
          {project.data.caseStudyUrl && (
            <Button href={project.data.caseStudyUrl} variant="secondary" class="ml-3">Case Study</Button>
          )}
        </div>
      )}
    </header>

    <!-- Project Content -->
    <article style="max-width: 800px; margin: 0 auto; padding-bottom: 64px;">
      <div class="prose">
        <Content />
      </div>
    </article>

    <!-- Project Results -->
    {(project.data.challenges || project.data.results) && (
      <section style="max-width: 1000px; margin: 0 auto; padding: 48px 0;">
        <div class="grid grid-2">
          {project.data.challenges && (
            <Card>
              <h3 class="body-large text-accent" style="margin-bottom: 16px;">Challenges</h3>
              <ul style="list-style: none; padding: 0;">
                {project.data.challenges.map((challenge) => (
                  <li class="body text-secondary" style="margin-bottom: 8px; padding-left: 16px; position: relative;">
                    <span style="position: absolute; left: 0; color: var(--accent);">•</span>
                    {challenge}
                  </li>
                ))}
              </ul>
            </Card>
          )}
          
          {project.data.results && (
            <Card>
              <h3 class="body-large text-accent" style="margin-bottom: 16px;">Results</h3>
              <ul style="list-style: none; padding: 0;">
                {project.data.results.map((result) => (
                  <li class="body text-secondary" style="margin-bottom: 8px; padding-left: 16px; position: relative;">
                    <span style="position: absolute; left: 0; color: var(--accent);">✓</span>
                    {result}
                  </li>
                ))}
              </ul>
            </Card>
          )}
        </div>
      </section>
    )}

    <!-- Other Projects -->
    {otherProjects.length > 0 && (
      <section style="max-width: 1000px; margin: 0 auto; padding: 48px 0; border-top: 1px solid var(--border-color);">
        <h2 class="h2" style="margin-bottom: 32px; text-align: center;">Other Projects</h2>
        <div class="grid grid-2">
          {otherProjects.map((otherProject) => (
            <Card>
              <h3 class="body-large" style="margin-bottom: 8px;">
                <a href={`/projects/${otherProject.slug}`} class="text-accent">{otherProject.data.title}</a>
              </h3>
              <p class="body text-secondary" style="margin-bottom: 12px;">{otherProject.data.description}</p>
              <div style="display: flex; justify-content: space-between; align-items: center;">
                <Badge>{otherProject.data.company}</Badge>
                <span class="body text-secondary">{otherProject.data.duration}</span>
              </div>
            </Card>
          ))}
        </div>
      </section>
    )}

    <!-- Navigation -->
    <nav style="max-width: 800px; margin: 0 auto; padding: 32px 0;">
      <a href="/projects" class="body text-accent">← Back to Projects</a>
    </nav>
  </main>
</Layout>

<style>
  .prose {
    color: var(--text);
  }
  
  .prose h1, .prose h2, .prose h3 {
    color: var(--accent);
    margin-top: 32px;
    margin-bottom: 16px;
  }
  
  .prose h1 { font-size: var(--font-size-h2); line-height: var(--line-height-h2); }
  .prose h2 { font-size: 24px; line-height: 28px; }
  .prose h3 { font-size: var(--font-size-body-large); line-height: var(--line-height-body-large); }
  
  .prose p {
    font-size: var(--font-size-body);
    line-height: var(--line-height-body);
    margin-bottom: 16px;
  }
  
  .prose ul, .prose ol {
    margin: 16px 0;
    padding-left: 24px;
  }
  
  .prose li {
    margin-bottom: 8px;
  }
</style>
