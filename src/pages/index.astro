---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/layout/Navigation.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
---

<Layout title="Neprokin — Simple Design of Complex Systems" description="I develop a system design based on data, user tasks, and common sense">
	<!-- Navigation - используем компонент -->
	<div class="container-wide">
		<Navigation />
	</div>

	<!-- Main Content - узкий контейнер, выровнен по левому краю -->
	<main class="container">
		<!-- Header Section -->
		<header class="page-header text-left">
			<h1 class="h1 text-accent mb-4">Simple Design of Complex Systems</h1>
			<p class="body-large text-secondary mb-8">I develop a system design based on data, user tasks, and common sense</p>
			
			<div class="flex items-center gap-4 flex-wrap mb-8">
				<div class="badge-group">
					<Badge>SaaS</Badge>
					<Badge>Design Systems</Badge>
					<Badge>Support for Startups</Badge>
				</div>
				<Button href="https://telegram.me/neprokin">Write in Telegram</Button>
			</div>
		</header>

		<!-- Process Section -->
		<section class="section">
			<h2 class="h2 mb-6">Design Process</h2>
			<p class="body text-secondary max-w-lg mx-auto">
				Concept → Goals → Research → Roles and Context → Tasks → Scenarios → Architecture → Prototype → Interface → Handover to Development → Authorial Supervision
			</p>
		</section>

		<!-- Portfolio Section -->
		<section class="section">
			<h2 class="h2 mb-8">Large companies and startups trust me</h2>
			
			<div class="grid grid-2 max-w-lg mx-auto">
				<Card>
					<h3 class="body-large mb-2">Urbi</h3>
					<p class="body text-secondary mb-3">Senior Product Designer</p>
					<Badge>Current</Badge>
				</Card>
				
				<Card>
					<h3 class="body-large mb-2">M2 Pro</h3>
					<p class="body text-secondary mb-3">Senior Product Designer</p>
					<Badge>2 years</Badge>
				</Card>
				
				<Card>
					<h3 class="body-large mb-2">VK Tax Compliance</h3>
					<p class="body text-secondary mb-3">Lead Product Designer</p>
					<Badge>1 year</Badge>
				</Card>
				
				<Card>
					<h3 class="body-large mb-2">Skipp Pro</h3>
					<p class="body text-secondary mb-3">Lead Product Designer</p>
					<Badge>2 years</Badge>
				</Card>
			</div>
		</section>
	</main>

	<!-- Footer Section - широкий контейнер как шапка -->
	<footer class="page-footer">
		<div class="container-wide">
			<p class="body text-secondary mb-4">© 2009–2024</p>
			<div class="nav-links justify-center">
				<a href="mailto:stas.neprokin@gmail.com" class="body text-accent">stas.neprokin@gmail.com</a>
				<a href="https://telegram.me/neprokin" class="body text-accent">telegram.me/neprokin</a>
			</div>
		</div>
	</footer>
</Layout>
