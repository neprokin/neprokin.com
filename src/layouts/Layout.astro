---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Simple Design of Complex Systems" } = Astro.props;

// Правильный импорт стилей в Astro
import '../styles/globals.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preload" href="/favicon.svg" as="image" type="image/svg+xml" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://neprokin.com/" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:site_name" content="neprokin.com" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary" />
		<meta property="twitter:url" content="https://neprokin.com/" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		
		<!-- Additional SEO -->
		<meta name="author" content="Stas Neprokin" />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href="https://neprokin.com/" />
		
		<!-- Performance First: No External Fonts for Instant FCP -->
		
		<!-- Critical CSS Inline -->
		<style is:global>
			/* Critical styles for immediate rendering */
			* { margin: 0; padding: 0; box-sizing: border-box; }
			
			:root {
				/* Базовые цвета - единственный источник правды */
				--white: #FDFDFD; --black: #0A0A0A;
				/* Семантические цвета */
				--bg: var(--white); --accent: var(--black);
				/* Критическая типографика */
				--font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
			}
			
			/* System fonts - instant loading, no external requests */
			
			[data-theme="dark"] {
				--bg: var(--black); --accent: var(--white);
			}
			
			html { font-family: var(--font-family); background-color: var(--bg); color: var(--text); }
			body { line-height: 1.5; -webkit-font-smoothing: antialiased; }
			
			.h1 { font-weight: 300; font-size: 48px; line-height: 52px; color: var(--text); }
			.h2 { font-weight: 300; font-size: 32px; line-height: 36px; color: var(--text); }
			.body-large { font-weight: 300; font-size: 20px; line-height: 28px; color: var(--text); }
			.body { font-weight: 500; font-size: 16px; line-height: 24px; }
			
			.text-primary { color: var(--text); }
			.text-secondary { color: var(--text-muted); }
			.text-accent { color: var(--accent); }
			
			.container { max-width: 1400px; margin: 0 auto; padding: 0 24px; }
			
			@media (max-width: 767px) {
				.h1 { font-size: 32px; line-height: 36px; }
				.h2 { font-size: 24px; line-height: 28px; }
				.container { padding: 0 16px; }
			}
		</style>
		
		<!-- Critical: Load essential styles immediately -->
	</head>
	<body>
		<slot />
	</body>
</html>
