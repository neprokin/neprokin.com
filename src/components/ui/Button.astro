---
export interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
}

const { 
  variant = 'primary', 
  size = 'md', 
  href, 
  class: className = '',
  ...props 
} = Astro.props;

const Tag = href ? 'a' : 'button';

const sizeClasses = {
  sm: 'text-sm px-3 py-2',
  md: 'px-6 py-3', 
  lg: 'px-8 py-4 text-lg'
};

const variantClasses = {
  primary: 'btn-primary',
  secondary: 'btn-secondary', 
  ghost: 'btn-ghost'
};

const classes = [
  'btn',
  'body',
  variantClasses[variant],
  sizeClasses[size],
  className
].filter(Boolean).join(' ');
---

<Tag 
  class={classes}
  href={href}
  {...props}
>
  <slot />
</Tag>
