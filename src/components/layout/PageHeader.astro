---
export interface Props {
  title: string;
  description?: string;
  class?: string;
}

const { title, description, class: className = '' } = Astro.props;
---

<header class={`page-header ${className}`}>
  <h1 class="h1 text-accent mb-4">{title}</h1>
  {description && (
    <p class="body-large text-secondary mb-8">{description}</p>
  )}
  <slot />
</header>
